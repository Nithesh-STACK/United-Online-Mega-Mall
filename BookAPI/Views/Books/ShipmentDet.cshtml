@model BookAPI.Models.ShipmentDetail

@{
    ViewData["Title"] = "ShipmentDet";
}

<style>
    .ship {
        background-image: url('~/wwwroot/images');
        background-size: auto;
        background-repeat: no-repeat;
        min-width: 100%;
        margin-top: -40px;
        position: absolute;
        left: -100%;
        right: -100%;
        margin: auto;
        top: 8%;
    }
    form {
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        position:relative;
        z-index: 1;
        margin: 0 auto 100px;
        padding: 20px;       
        background: #80ced6;
        max-width: 360px;
    }

        form input {
            font-family: "Roboto", sans-serif;
            outline: 0;
            background: #f2f2f2;
            width: 100%;
            border: 0;
            margin: 0 0 15px;
            padding: 15px;
            box-sizing: border-box;
            font-size: 14px;
        }

    .btn-primary{
        font-family: "Roboto", sans-serif;
        text-transform: uppercase;
        outline: 0;
        background-color: #008CBA;
        width: 100%;
        border: 0;
/*        padding: 15px;
*/        color: #FFFFFF;
        font-size: 14px;
        -webkit-transition: all 0.3 ease;
        transition: all 0.3 ease;
        cursor: pointer;
    }
</style>
<hr />
<div class="container">
    <img class="ship" src="~/assets/ship.jpg" />
    <div class="row">
        <div class="col-md-4">
            <h1 style="color:aliceblue">ShipmentDetail</h1>

            <form  asp-action="ShipmentDet">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label style="color:aliceblue" asp-for="BuyersName" class="control-label"></label>
                    <input asp-for="BuyersName" class="form-control" placeholder="Enter Name" />
                    <span asp-validation-for="BuyersName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:aliceblue" asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" placeholder="Enter Age" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:aliceblue" asp-for="AddressDetails" class="control-label"></label>
                    <input asp-for="AddressDetails" class="form-control" placeholder="Enter Address" />
                    <span asp-validation-for="AddressDetails" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label style="color:aliceblue" asp-for="MobileNumber" class="control-label"></label>
                    <input asp-for="MobileNumber" class="form-control" placeholder="Enter Mobile Number" />
                    <span asp-validation-for="MobileNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" asp-controller="Books" asp-action="PaymentsMode" value="Submit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
