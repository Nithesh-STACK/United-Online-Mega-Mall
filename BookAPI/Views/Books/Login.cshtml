@model BookAPI.Models.MemberLogin

@{ ViewData["Title"] = "Login"; }
<style>
    h1 {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
    }

    h4 {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
    }

    form {
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        position: relative;
        z-index: 1;
        background: #FFFFFF;
        max-width: 360px;
        margin: 0 auto 100px;
/*        text-align: center;
*/        padding: 45px;
        background: #FFFFFF;
        max-width: 360px;
        margin: 0 auto 100px;
    }
    form input {
        font-family: "Roboto", sans-serif;
        outline: 0;
        background: #f2f2f2;
        width: 100%;
        border: 0;
        margin: 0 0 15px;
        padding: 15px;
        box-sizing: border-box;
        font-size: 14px;
    }
   .btn{
        font-family: "Roboto", sans-serif;
        text-transform: uppercase;
        outline: 0;
        background: #4CAF50;
        width: 100%;
        border: 0;
        padding: 15px;
        color: #FFFFFF;
        font-size: 14px;
        -webkit-transition: all 0.3 ease;
        transition: all 0.3 ease;
        cursor: pointer;
    }

   .pr{
          font-family: "Roboto", sans-serif;
        text-transform: uppercase;
        outline: 0;
        background-color:darkred;
        width: 100%;
        border: 0;
        padding: 15px;
        color: #FFFFF;
        font-size: 14px;
        -webkit-transition: all 0.3 ease;
        transition: all 0.3 ease;
        cursor: pointer;
   }
    .log {
        background-image: url('~/wwwroot/images/cds.jpg');
        background-size: auto;
        background-repeat: no-repeat;
        min-width: 100%;
        margin-top: -40px;
        position: absolute;
        left: -100%;
        right: -100%;
        margin: auto;
        top: 8%;
    }
  
    .font{
        position:absolute;
        text-align:center;
        left:20%;
        color:black;
        top:-11%;

    }
</style>

<hr />

<div style="color:white;">
<h4 style="text-align:center"> Login </h4>
<hr />

<div class="container">
    <img class="log" src="~/assets/cds.jpg" />
    <div class="row">
        <div class="col-md-4">
            <h5 class="font">Login to continue shopping</h5>

            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label" style="color:black">UserName</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter the Username " />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label" style="color:black">Password </label>
                    <input type="password" asp-for="Password" class="form-control" placeholder="Enter the Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <div class="alert alert-info">@ViewBag.Message</div>
                }
                <div class="form-group">
                    <input type="submit" value="Login" class="btn" />
                    <a input type="submit" asp-action="RegisterUsers" class="btn pr" />Register as new user</a>

                </div>
            </form>
        </div>
    </div>
</div>

    </div>