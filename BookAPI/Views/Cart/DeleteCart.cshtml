@model BookAPI.Models.AddCart

@{
    ViewData["Title"] = "DeleteCart";
}
<style>


    body {
        background-color: palevioletred;
    }
    .row {
        background-color: ghostwhite;
    }
    
</style>

<h3>Are you sure you want to Remove this from Cart?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.Photo)" height="200" width="200" />

        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price) Rs
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PlotDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlotDescription)
        </dd>
    </dl>
    
    <form asp-action="DeleteCart">
      <input type="submit" value="Remove" class="btn btn-danger" /> |
        <a class="btn btn-success" asp-action="CartItems" asp-controller="Cart">Back to Cart</a>
    </form>
</div>
