@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<ul class=" navbar-nav ml-auto">
    @{
        ViewBag.Data = @HttpContextAccessor.HttpContext.Session.GetString("Username");
    }
    @if (ViewBag.Data != null)
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-white" asp-controller="Books" asp-action="Indes" title="Manage">Hello @ViewBag.Data!</a>
        </li>
        <li class="nav-item">
            <a id="logoutForm" class="form-inline" asp-controller="Books" asp-action="Logout" asp-route-returnUrl="@Url.Action("Login", "Login", new { area = "Login" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white">Logout</button>
           </a>
        </li>
    }

    else
    {
<li class="nav-item">
    <a class="nav-link text-dark" id="RegisterUsers" asp-controller="Books" asp-action="RegisterUsers">Register</a>

</li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="Books" asp-action="Login">Login</a>
        </li>

    }
</ul>
